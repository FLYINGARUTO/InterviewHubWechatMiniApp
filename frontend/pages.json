{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^m-(.*)": "@/components/global/m-$1.vue" // 匹配components目录内的vue文件

		}
	},

	"pages": [{
			"path": "pages/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/reg/reg",
			"style": {
				"navigationBarTitleText": "注册"
			}
		}, {
			"path": "pages/reg/reg-success",
			"style": {
				"navigationBarTitleText": "注册成功"
			}
		}, {
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的",
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/articles/publish",
			"style": {
				"navigationBarTitleText": "发布"
			}
		},
		{
			"path": "pages/articles/publish-success",
			"style": {
				"navigationBarTitleText": "发布成功"
			}
		},
		{
			"path": "components/global/m-card",
			"style": {
				"navigationBarTitleText": ""
			}
		},
		{
			"path": "pages/articles/article",
			"style": {
				"navigationBarTitleText": "详情"
			}
		}

	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#d2302c",
		"backgroundColor": "#F8F8F8",
		"app-plus": {
			"background": "#efeff4"
		}
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [{
			"name": "", //模式名称
			"path": "", //启动页面，必选
			"query": "" //启动参数，在页面的onLoad函数里面得到
		}]
	},
	"tabBar": {
		"selectedColor": "#d2302c",
		"list": [{
				"text": "首页",
				"pagePath": "pages/index/index",
				"iconPath": "static/icon/home0.png",
				"selectedIconPath": "static/icon/home1.png"
			},
			{
				"text": "分享",
				"pagePath": "pages/articles/publish",
				"iconPath": "static/icon/publish0.png",
				"selectedIconPath": "static/icon/publish1.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/my/my",
				"selectedIconPath": "static/icon/my1.png",
				"iconPath": "static/icon/my0.png"
			}
		]
	}
}